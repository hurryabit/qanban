{
  "private": true,
  "name": "qanban-node",
  "version": "0.0.1",
  "homepage": "https://github.com/hurryabit/qanban#readme",
  "author": "Martin Huschenbett <martin.huschenbett@posteo.me>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/hurryabit/qanban.git",
    "directory": "node"
  },
  "bin": "bin/index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc --project tsconfig.build.json",
    "build:watch": "tsc --watch --project tsconfig.json",
    "test": "jest",
    "lint": "eslint --ext .js,.ts --max-warnings 0 src/"
  },
  "dependencies": {
    "better-sqlite3": "^6.0.1",
    "express": "^4.17.3",
    "node": "^13.10.1",
    "qanban-types": "0.0.1",
    "qured-client": "0.0.1",
    "uuid": "^7.0.2",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^5.4.0",
    "@types/express": "^4.17.3",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.0",
    "@types/node-fetch": "^2.5.5",
    "@types/uuid": "^7.0.0",
    "@types/wait-on": "^4.0.0",
    "@types/yargs": "^15.0.4",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "jest": "^25.1.0",
    "node-fetch": "^2.6.0",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "typescript": "~3.8.3",
    "wait-on": "^4.0.1"
  },
  "engines": {
    "node": "^13.10.1",
    "yarn": "^1.22.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-floating-promises": "error",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-inferrable-types": "off"
    }
  }
}
